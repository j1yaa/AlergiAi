{
  "expo": {
    "name": "allergyai",
    "slug": "allergyai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "allergyai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.allergyai.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "allowBackup": false,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      //"permissionsPolicy": {
      //  "CAMERA": "This app uses the camera to scan food labels and identify potential allergens in your meals.",
      //  "READ_EXTERNAL_STORAGE": "This app needs to access your photos to help you upload images of food labels for allergen detection.",
      //  "WRITE_EXTERNAL_STORAGE": "This app saves scanned food images to help you track your meal history and allergen exposure."
      //},
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
     "plugins": [
          [
               "expo-splash-screen",
               {
                    "backgroundColor": "#ffffff",
                    "image": "./assets/images/splash-icon.png",
                    "imageWidth": 200
               }
          ],
          [
               "expo-font",
               {
                    "fonts": [
                         "./assets/fonts/SpaceMono-Regular.ttf"
                    ]
               }
          ],
          [
               "expo-camera",
               {
                    "cameraPermission": "Allow AllergyAI to access your camera to scna food label for allergens.",
                    "microphonePermission": "Allow AllergyAI to access your microphone."
               }
          ]
     ],
     "extra": {
          "eas": {
               "projectId": "allergyai"
          }
     }
  }
}
